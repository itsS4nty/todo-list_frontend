{
	"compilerOptions": {
		"jsx": "react-jsx",
		"target": "ES2022",
		"module": "ESNext",
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"declaration": true,
		"typeRoots": ["./node_modules/@types"],
		"types": ["node"],
		"lib": ["ESNext", "DOM"],
		"strictNullChecks": true,
		"noImplicitAny": true
	},
	"include": ["src"],
	"references": [{ "path": "./tsconfig.node.json" }]
}
